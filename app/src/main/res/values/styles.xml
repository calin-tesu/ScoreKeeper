<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8951bf1e</item>
        <item name="colorPrimaryDark">#8951bf1e</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TeamStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScoreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_big</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatsButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_big</item>
        <item name="android:layout_marginRight">@dimen/margin_big</item>
    </style>

    <style name="StatsTextStle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/stats_text_size</item>
    </style>

</resources>
